<script type="text/javascript">
  // Submenú Meditación
function coleccionMeditacion(e) {
    const cambioMeditacion = document.getElementsByClassName('itemsMeditacion')[0];
    cambioMeditacion.style.display = 'flex';

    if (cambioMeditacion.style.display = 'flex'){
        const clicBow = document.querySelector('.bannerHome, .principal');
        clicBow.addEventListener("click", function pepe(e){
            cambioMeditacion.style.display = 'none';
        })
    }
};
const clicMeditacionF = document.querySelector('.liMeditacion');  
clicMeditacionF.addEventListener("click", coleccionMeditacion, false);

// Lista Zafu
function clicListaZafu(e){
