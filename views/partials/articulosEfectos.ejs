<!-- script para imagen de perspectiva -->
  <script type="text/javascript">
    $(function(){
      $('.fade').slick({
          dots: true,
          infinite: true,
          speed: 700,
          autoplay:true,
          autoplaySpeed: 2000,
          arrows:false,
          slidesToShow: 1
       });
    });
